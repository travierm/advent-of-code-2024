{
  "name": "tmoorlag/advent-of-code-2024",
  "type": "project",
  "autoload": {
    "files": [
      "src/lib/helpers.php"
    ],
    "psr-4": {
      "App\\": "src/",
      "App\\Lib\\": "src/lib"
    }
  },
  "scripts": {
    "day": "php src/lib/runner.php",
    "test": "./vendor/bin/pest"
  },
  "authors": [
    {
      "name": "Travier Moorlag",
      "email": "moorlagt@gmail.com"
    }
  ],
  "require": {
    "symfony/var-dumper": "^7.2",
    "monolog/monolog": "^3.8",
    "bramus/monolog-colored-line-formatter": "^3.1"
  },
  "require-dev": {
    "pestphp/pest": "^3.5"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
